{
  "manifest_version": 2,

  "name": "WatCard Balance",
  "version": "1",

  "description": "Provides information about WatCard balance and spending.",

  "web_accessible_resources": ["popupContent.html"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://account.watcard.uwaterloo.ca/*"
  ]
}