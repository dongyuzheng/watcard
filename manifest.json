{
  "manifest_version": 2,

  "name": "WatCard Balance",
  "version": "1",

  "description": "Provides information about WatCard balance and spending.",

  "web_accessible_resources": ["popupContent.html","graphs.html","login.html","loading.gif"],
  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
            "128": "icon128.png" 
  },
  "permissions": [
    "tabs",
    "storage",
    "https://account.watcard.uwaterloo.ca/*"
  ]
}